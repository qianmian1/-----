page {
  background-color: #f5f5f5;
}
.my_header {
  position: relative;
  padding-bottom: 15px;
}
.my_header .my_header_backgroud {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  filter: blur(8px);
  opacity: 0.3;
}
.my_header .my_header_backgroud image {
  width: 100%;
  height: 100%;
}
.my_header .my_header_logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30px;
}
.my_header .my_header_logo .my_header_logobox {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}
.my_header .my_header_logo .my_header_logobox image {
  width: 100%;
  height: 100%;
}
.my_header .my_header_logo .my_header_name {
  margin-top: 15px;
  font-size: 16px;
  font-weight: bold;
}
.my_header .my_header_info {
  margin-top: 15px;
  display: flex;
}
.my_header .my_header_info .my_header_info-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  font-size: 12px;
  color: #999;
}
.my_header .my_header_info .my_header_info-box .my_header_info-title {
  font-size: 14px;
  color: #333;
}
.my-content .my-comtent_list {
  display: flex;
  justify-content: space-between;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #ffffff;
  color: #333;
  font-size: 14px;
}
.my-content .my-comtent_list .my-comtent_list-title {
  display: flex;
  align-items: center;
}
.my-content .my-comtent_list .my-comtent_list-title .icons {
  margin-right: 5px;
}